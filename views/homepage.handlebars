{{#if blogs.length}}
  <ul>
{{#each blogs}}
  <div class="blog-container">
    <h2>{{ title }}</h2>
    <p>{{ content }}</p>
    <p>Written by {{ user.username }}</p>
    <h3>Comments:</h3>
    {{#each comments}}
      <p>{{ text }}</p>
      <p>Comment by {{ user.username }}</p>
    {{/each}}
  </div>
{{/each}}
  </ul>
{{else}}
  <p>No blogs found.</p>
{{/if}}